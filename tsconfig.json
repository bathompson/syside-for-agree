{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": [
            "ESNext"
        ],
        "outDir": "./out",
        "strict": true,
        "rootDir": ".",
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "noImplicitOverride": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*.ts",
        "scripts/**/*.ts",
        ".githooks/**/*.ts",
    ],
    "exclude": [
        "out",
        "node_modules",
    ],
}